<div class="row">
  <div class="col-md-6">
    <h2>List of All Projects</h2>
    <% if @projects.any? %>
      <ul>
        <% @projects.each do |project| %>
          <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are currently no projects to display.</p>
    <% end %>

    <h1>Add a new project</h1>

    <form action="/projects" method="post">
      <div class="form-group">
        <label for="title">Project Title</label>
        <input id="title" name="title" class="form-control" type="text">
      </div>
      <button type="submit" class="btn">Create Project</button>
    </form>
  </div>
  <div class="col-md-6">
    <h2>List of All Volunteers</h2>
    <% if @volunteers %>
      <ul>
        <% @volunteers.each do |volunteer| %>
          <li><a href="/volunteer/<%= volunteer.id %>"><%= volunteer.name %></a></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are currently no volunteers to display.</p>
    <% end %>

    <h1>Add a new volunteer</h1>

    <form action="/volunteers" method="post">
      <div class="form-group">
        <label for="name">Volunteer Name</label>
        <input id="name" name="name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn">Add Volunteer</button>
    </form>
  </div>  
</div>