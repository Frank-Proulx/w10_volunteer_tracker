<% if @project %>
<h2>Project Title: <%= @project.title %></h2>
<% end %>

<a href="/projects/<%= @project.id %>/edit">Edit Project</a>

<% if @assigned_volunteers %>
<h2>Volunteers assigned to this project</h2>
  <ul>
    <% @assigned_volunteers.each do |volunteer| %>
      <li><a href="/volunteer/<%= volunteer.id %>"><%= volunteer.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no volunteers to display.</p>
<% end %>

<a href="/">Back to home</a>